{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Options",
            "items": {
                "oekofenIp" : {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "OekoFEN IP",
                    "help": "The IP of your OekoFEN touch device in the network"
                },
                "oekofenPort" : {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "TCPPort",
                    "help": "The Port you've set on your OekoFEN touch device to listen on"
                },
                "oekofenPassword" : {
                    "type": "password",
                    "repeat": true,
                    "visible": true,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Password",
                    "help": "Enter the password you've set on your OekoFEN touch device"
                },
                "myRequestInterval" : {
                    "type": "number",
                    "min": 10,
                    "max": 240,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Poll-Interval (s)",
                    "help": "How often should the adapter pull the updates from the device"
                },
                 "maxRetries" : {
                    "type": "number",
                    "min": 1,
                    "max": 1000,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Max Retries",
                    "help": "How many times should the adapter retry before disabling itself?"
                }
            }
        }
    }
}
